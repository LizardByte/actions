[
  {
    "runs-on": "ubuntu-latest",
    "with": {
      "allowUpdates": false,
      "artifactErrorsFailBuild": true,
      "artifacts": "dist/*",
      "body": "Test from PR-${ github.event.pull_request.number }",
      "deleteOtherPreReleases": false,
      "generateReleaseNotes": false,
      "name": "pr-${ github.event.pull_request.number }-${ github.run_id }",
      "prerelease": true,
      "tag": "pr-${ github.event.pull_request.number }-${ github.run_id }",
      "token": "${ secrets.GH_BOT_TOKEN }",
      "virustotal_api_key": "${ secrets.VIRUSTOTAL_API_KEY }"
    }
  },
  {
    "runs-on": "ubuntu-latest",
    "with": {
      "allowUpdates": false,
      "artifactErrorsFailBuild": true,
      "artifacts": "dist/*",
      "body": "Test from PR-${ github.event.pull_request.number }-draft",
      "deleteOtherPreReleases": false,
      "draft": true,
      "generateReleaseNotes": false,
      "name": "pr-${ github.event.pull_request.number }-${ github.run_id }-draft",
      "prerelease": true,
      "tag": "pr-${ github.event.pull_request.number }-${ github.run_id }-draft",
      "token": "${ secrets.GH_BOT_TOKEN }",
      "virustotal_api_key": "${ secrets.VIRUSTOTAL_API_KEY }"
    }
  }
]
